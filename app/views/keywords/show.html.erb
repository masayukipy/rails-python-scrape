<div class="d-flex bd-highlight mb-3">
    <div class="me-auto p-2 bd-highlight">
        <h2>Detail</h2>
    </div>
    <div class="p-2 bd-highlight">
        <!-- <button type="button" class="btn btn-secondary" onclick="showUserCreateBox()">Create</button> -->
        <%= link_to "Back" , "/" , class: "btn btn-secondary" %>
    </div>
</div>


<div class="row m-5 h2">
    keyword: <%= @keyword.word %>, &nbsp;               
    times: <%= @keyword.times %>
</div>

<div class="row">
    <div class="col-4 row">
        <%= link_to "Edit", edit_keyword_path(@keyword), class: "btn btn-primary m-2" %>
        <%= link_to "Delete", keyword_path(@keyword),
            data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
            }, class: "btn btn-danger m-2"
        %>
    </div>
    <div class="col-8">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Word Id</th>
                        <th>Run Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% @rundates.each do |rundate| %>
                    <tr>
                        <th><%= rundate.word_id %></th>
                        <th><%= rundate.date %></th>
                        <th><%= rundate.status %></th>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

