<div class="d-flex bd-highlight mb-3">
    <div class="me-auto p-2 bd-highlight">
        <h2>Detail</h2>
    </div>
    <div class="p-2 bd-highlight">
        <%= link_to "Edit", edit_keyword_path(@keyword), class: "btn btn-primary" %>
        <%= link_to "Delete", keyword_path(@keyword),
            data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
            }, class: "btn btn-danger"
        %>
        <!-- <button type="button" class="btn btn-secondary" onclick="showUserCreateBox()">Create</button> -->
        <%= link_to "Back" , "/" , class: "btn btn-secondary" %>
    </div>
</div>



<div class="row">
    <div class="row mb-5">
        <div class="col-12">keyword: <%= @keyword.word %> &nbsp;</div>
        <div class="col-3">times: <%= @keyword.times %></div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Run Date</th>
                        <th>Last Month</th>
                    </tr>
                </thead>
                <tbody>
                    <% @rundates.each_with_index do |rundate, index| %>
                    <tr>
                        <th><%= index + 1 %></th>
                        <th><%= rundate.date %></th>
                        <th><%= rundate.last_month %></th>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

